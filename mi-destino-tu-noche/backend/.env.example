# =====================================================
# MI DESTINO TU NOCHE - Variables de Entorno
# =====================================================

# Servidor
NODE_ENV=development
PORT=3001

# Base de datos (Supabase)
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres
SUPABASE_URL=https://[PROJECT].supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# JWT
JWT_SECRET=tu-clave-secreta-muy-larga-y-segura-cambiar-en-produccion

# Google OAuth (para login con Google)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Firebase (para notificaciones push)
# Puedes pegar el JSON del service account aquí (escapado) o usar un archivo
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"..."}

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3002,https://midestinotunoche.com

# Cloudinary (para imágenes - alternativa a Supabase Storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
